@{
    ViewData["Title"] = "Gardening Products";
}
@{
    Layout = null;
}
<!DOCTYPE html>

<html>

<title>

    Gardening Products

</title>

<script src="https://kit.fontawesome.com/5471644867.js" crossorigin="anonymous"></script>

<environment names="Development">
    <link rel="stylesheet" href="~/css/ProductPage.css" />
</environment>

<body>

    <section id="popular-product">
        <!--logo-------->
        <div class="totalLogo">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="logo">
                <span>Quick</span><br />Grab
            </a>
        </div>
        <!--heading----------->
        <div class="product-heading">
            <h2 class='fruits-heading'>Gardening Products</h2>
        </div>
        <!--box-container------>
        <div class="product-container">
            <!--box---------->
            <div class="product-box">
                <img alt="Gardening Gloves" src="~/images/Gloves.jpg">
                <strong>Gardening Gloves</strong>
                <span class="quantity">1</span>
                <span class="price">LBP 45,000</span>
                <!--cart-btn------->
                <a href="Shopping Cart HTML.html" class="cart-btn" style='text-decoration: none;'>
                    <i class="fas fa-shopping-bag"></i> Add to Cart
                </a>
                <!--like-btn------->
                <a class="like-btn" style='text-decoration: none;'>
                    <i class="far fa-heart"></i>
                </a>
            </div>
            <!--box---------->
            <div class="product-box">
                <img alt="Watering Can" src="~/images/Watering Can.jpg">
                <strong>Watering Can</strong>
                <span class="quantity">1</span>
                <span class="price">LBP 110,000</span>
                <!--cart-btn------->
                <a href="Shopping Cart HTML.html" class="cart-btn" style='text-decoration: none;'>
                    <i class="fas fa-shopping-bag"></i> Add to Cart
                </a>
                <!--like-btn------->
                <a class="like-btn" style='text-decoration: none;'>
                    <i class="far fa-heart"></i>
                </a>
            </div>
            <!--box---------->
            <div class="product-box">
                <img alt="Unigrow Manure" src="~/images/manure.jpg">
                <strong>Unigrow Manure</strong>
                <span class="quantity">900 g</span>
                <span class="price">LBP 80,000</span>
                <!--cart-btn------->
                <a href="Shopping Cart HTML.html" class="cart-btn" style='text-decoration: none;'>
                    <i class="fas fa-shopping-bag"></i> Add to Cart
                </a>
                <!--like-btn------->
                <a class="like-btn" style='text-decoration: none;'>
                    <i class="far fa-heart"></i>
                </a>
            </div>
        </div>
    </section>

</body>

</html>