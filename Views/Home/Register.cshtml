@model RegisterViewModel

@{
    ViewBag.Title= "Register";
}
<!DOCTYPE html>

<!--This is a login page made up with HTML,CSS and javascript-->

<html>

<head>
    <script src="https://kit.fontawesome.com/5471644867.js" crossorigin="anonymous"></script>
    <environment>
        <link type="text/css" rel="stylesheet" href="~/css/Login And Registration CSS.css">
        <link type="text/css" rel="stylesheet" href="~/css/Home Page CSS.css">
        <link rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </environment>

</head>

<body>
        <section>

            <div class="sec hide" id="three">

                <div class="textbox slide-left">

                    <h1>

                        Already a member?

                    </h1>

                    <p>

                        Login to keep shopping.

                    </p>

                    <button id="b2" style="cursor: pointer;" class='prompt_sign_in'>

                        SIGN IN

                    </button>

                </div>

            </div>

            <div class="login hide" id="four">

                <div class="textbox slide-right">

                    <div class="head">

                        <h1>

                            Create Account

                        </h1>


                        <h3 style="cursor: pointer;">

                            Products at your doorstep!

                        </h3>

                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form method="post" asp-controller="Account" asp-action="Register">

                        <input asp-for="Username" type="text" placeholder="NAME" required>

                        <br>

                        <input asp-for="Email" type="text" placeholder="EMAIL" required>

                        <br>

                        <input asp-for="Password" type="password" placeholder="PASSWORD" required>

                        <br>

                        <input  asp-for= "ConfirmPassword" type="password" placeholder="CONFIRM PASSWORD" required>

                        <br>

                        <input asp-for="PhoneNumber" type="text" placeholder="PHONE NO. (optional)">

                        <br>

                        <button type="submit" style="cursor: pointer;" class='sign_up_btn'>

                                SIGN UP

                        </button>

                    </form>

                </div>

            </div>

        </section>

    </section>



    <script src="~/js/Login And Registration JS.js"></script>

</body>

</html>