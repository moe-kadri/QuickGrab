@using Microsoft.AspNetCore.Identity;
@model Product
<div class="product-box">
    <img alt="Cetirizine" src="@Model.imgURL">
    <strong>@Model.name</strong>
    <span class="quantity">@Model.quantity</span>
    <span class="price">@Model.price</span>
    <form method="post" asp-controller="Home" asp-action="ShoppingCart">
        <input type="hidden" asp-for="@User.Identity.Name">
        <input type="hidden" asp-for="@Model.ProductId">

        <button type="submit" class="cart-btn" style='text-decoration: none;'>
            <i class="fa fa-shopping-bag"></i> Add to Cart
        </button>


    </form>
    <a class="like-btn" style='text-decoration: none;'>
        <i class="fa fa-heart"></i>
    </a>



</div>