@model Tuple<List<Product>, Search>
@{
    ViewData["Title"] = "Food Products";
}

<!DOCTYPE html>

<html>

<title>

    Results

</title>

<script src="https://kit.fontawesome.com/5471644867.js" crossorigin="anonymous"></script>

<environment names="Development">
    <link rel="stylesheet" href="~/css/ProductPage.css" />
    <link rel="stylesheet" href="~/css/Home Page CSS.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</environment>

<body>

    <section id="popular-product">
        <!--logo-------->

        <!--heading----------->
        <div class="product-heading">
            <h2 class='fruits-heading'>Results</h2>
        </div>
        <!--box-container------>
        <div class="product-container">
            @foreach (var product in Model.Item1)
            {
                @if(String.Equals(product.name,Model.Item2.name)){
                    <div class="product-box">
                        <img alt="Cetirizine" src="@product.imgURL">
                        <strong>@product.name</strong>
                        <span class="quantity">@product.quantity</span>
                        <span class="price">@product.price</span>

                        <a href="Shopping Cart HTML.html" class="cart-btn" style='text-decoration: none;'>
                            <i class="fa fa-shopping-bag"></i> Add to Cart
                        </a>

                        <a class="like-btn" style='text-decoration: none;'>
                            <i class="fa fa-heart"></i>
                        </a>
                    </div>
                
                }
                    

            }

        </div>
    </section>

</body>

</html>     